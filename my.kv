<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.81}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.4, "top":0.8}
                size_hint: 0.4, 0.07
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.4, "top":0.8-0.14}
                size_hint: 0.4, 0.07
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.4, "top":0.8-0.14*2}
                size_hint: 0.4, 0.07
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 16**4

        Button:
            pos_hint:{"x":0.4,"y":0.25}
            size_hint: 0.4, 0.1
            background_normal: 'normal.png'
            background_down: 'down.png'
            border: 30,30,30,30
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.45,"y":0.1}
            size_hint: 0.3, 0.1
            background_normal: 'normal.png'
            background_down: 'down.png'
            border: 30,30,30,30
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 16**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"
    email: email
    password: password

    FloatLayout:
        Label:
            text:"Login"
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.4, "top":0.96}
            size_hint: 0.35, 0.15

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 16**4
            pos_hint: {"x":0.1, "top":0.82}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 16**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.8}
            size_hint: 0.4, 0.07

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 16**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 16**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.65}
            size_hint: 0.4, 0.07

        Button:
            pos_hint:{"x":0.34,"y":0.20}
            size_hint: 0.4, 0.1
            background_normal: 'normal.png'
            background_down: 'down.png'
            border: 30,30,30,30
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.34,"y":0.38}
            size_hint: 0.4, 0.1
            background_normal: 'normal.png'
            background_down: 'down.png'
            border: 30,30,30,30
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<MainWindow>:
    n: n
    email: email
    created:created


    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.8}
            size_hint:0.8, 0.2
            text: "Email: "

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Created: "

        Button:
            pos_hint:{"x":0.35, "y": 0.4}
            size_hint:0.3,0.1
            text: "Log Out"
            background_normal: 'normal.png'
            background_down: 'down.png'
            border: 30,30,30,30
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"